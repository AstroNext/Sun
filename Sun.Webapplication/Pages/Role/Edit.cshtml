@page
@model EditModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="text-center">
    <h1 class="display-4 border-bottom p-3">ویرایش رول</h1>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-6 form-group text-right">
            <label asp-for="@Model.Role.Name">نام رول</label>
            <input class="form-control" value="@Model.Role.Name" name="name" id="name" type="text" />
        </div>
        <input hidden asp-for="@Model.Role.Id" value="@Model.Role.Id" />
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">
            ثبت ویرایش <span class="fa fa-save pr-1"></span>
            </button>
        </div>
    </div>
</form>
