@page
@model Sun.Webapplication.Pages.Product.EditModel
@{
    ViewData["Title"] = "Edit product";
}

<div class="text-center">
    <h1 class="display-4 border-bottom p-3">ویرایش کالا</h1>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-6 form-group text-right">
            <label asp-for="@Model.Command.Name">نام کالا</label>
            <input class="form-control" asp-for="@Model.Command.Name" />
        </div>
        <div class="col-md-6 form-group text-right">
            <label asp-for="@Model.Command.UnitPrice">قیمت کالا</label>
            <input class="form-control" asp-for="@Model.Command.UnitPrice" />
        </div>
        <div class="col-md-6 form-group text-right">
            <label asp-for="@Model.Command.BrandId">برند کالا</label>
            <select class="form-control" asp-items="@Model.ProductBrands" asp-for="@Model.Command.BrandId">
                <option value="0">برند محصول را انتخاب کنید</option>
            </select>
        </div>
        <div class="col-md-6 form-group text-right">
            <label asp-for="@Model.Command.CategoryId">دسته بندی کالا</label>
            <select class="form-control" asp-items="@Model.ProductCategorys" asp-for="@Model.Command.CategoryId">
                <option value="0">دسته بندی محصول را انتخاب کنید</option>
            </select>
        </div>
        <div class="col-md-6 form-group text-right">
            <label asp-for="@Model.Command.UnitId">واحد کالا</label>
            <select class="form-control" asp-items="@Model.ProductUnits" asp-for="@Model.Command.UnitId">
                <option value="0">دسته بندی محصول را انتخاب کنید</option>
            </select>
        </div>
        <input type="hidden" asp-for="@Model.Command.Id" value="@Model.Command.Id" />
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">
                ثبت <span class="fa fa-save"></span>
            </button>
            <button asp-page="./Index" class="btn btn-warning">
                بازگشت <span class="fa fa-arrow-left"></span>
            </button>
        </div>
    </div>
</form>