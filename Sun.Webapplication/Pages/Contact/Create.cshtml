@page
@model Sun.Webapplication.Pages.Contact.CreateModel
@{
    ViewData["Title"] = "New contact";
}
<div class="text-center">
    <h1 class="display-4 border-bottom p-3">مخاطب جدید</h1>
</div>

<form method="post">
    <div class="row">
        <div class="col-md-6 form-group text-right">
            <label>نام</label>
            <input class="form-control" name="firstname" id="firstname" type="text" />
        </div>
        <div class="col-md-6 form-group text-right">
            <label>نام خانوادگی</label>
            <input class="form-control" name="lastname" id="lastname" type="text" />
        </div>
        <div class="col-md-6 form-group text-right">
            <label>آدرس</label>
            <input class="form-control" name="adress" id="adress" type="text" />
        </div>
        <div class="col-md-6 form-group text-right">
            <label>کد پستی</label>
            <input class="form-control" name="postcode" id="postcode" type="text" />
        </div>
        <div class="col-md-6 form-group text-right">
            <label>شماره تلفن</label>
            <input class="form-control" name="phonenumber" id="phonenumber" type="text" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">
                ذخیره <span class="fa fa-save pr-1"></span>
            </button>
        </div>
    </div>
</form>
